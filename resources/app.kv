            background_normal: ''
            background_color: 1, 1, 1, 1
            bold: True

            pos_hint: {'x': .25}

            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
